<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_a_tooth" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/t9"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerHorizontal="true"
            android:text="9" />

        <Button
            android:id="@+id/t10"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/t9"
            android:text="10" />

        <Button
            android:id="@+id/t11"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignLeft="@+id/t10"
            android:layout_below="@+id/t10"
            android:layout_marginLeft="16dp"
            android:text="11" />

        <Button
            android:id="@+id/t12"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t11"
            android:layout_toRightOf="@+id/t10"
            android:text="12" />

        <Button
            android:id="@+id/t13"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t12"
            android:layout_toRightOf="@+id/t11"
            android:text="13" />

        <Button
            android:id="@+id/t14"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t13"
            android:layout_toRightOf="@+id/t12"
            android:text="14" />

        <Button
            android:id="@+id/t15"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t14"
            android:layout_toRightOf="@+id/t13"
            android:text="15" />

        <Button
            android:id="@+id/t16"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t15"
            android:layout_toRightOf="@+id/t13"
            android:text="16" />

        <Button
            android:id="@+id/t8"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/t9"
            android:text="8" />

        <Button
            android:id="@+id/t7"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignBaseline="@+id/t10"
            android:layout_alignBottom="@+id/t10"
            android:layout_toLeftOf="@+id/t8"
            android:text="7" />

        <Button
            android:id="@+id/t6"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignRight="@+id/t7"
            android:layout_below="@+id/t7"
            android:layout_marginRight="15dp"
            android:text="6" />

        <Button
            android:id="@+id/t4"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_above="@+id/t14"
            android:layout_toLeftOf="@+id/t6"
            android:text="4" />

        <Button
            android:id="@+id/t5"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_above="@+id/t4"
            android:layout_toLeftOf="@+id/t7"
            android:text="5" />

        <Button
            android:id="@+id/t3"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t4"
            android:layout_toLeftOf="@+id/t5"
            android:text="3" />

        <Button
            android:id="@+id/t2"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_below="@+id/t3"
            android:layout_toLeftOf="@+id/t4"
            android:text="2" />

        <Button
            android:id="@+id/t1"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignLeft="@+id/t2"
            android:layout_below="@+id/t2"
            android:text="1" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="402dp"
        android:layout_height="fill_parent" >

    </HorizontalScrollView>


</LinearLayout>